<Project Sdk="Microsoft.NET.Sdk">
    <!-- Properties -->
    <PropertyGroup>
        <DefaultItemExcludes>$(DefaultItemExcludes);**\*.v3.ncrunchproject;**\*.v3.ncrunchproject.user
        </DefaultItemExcludes>
        <TargetFrameworks>net46;net461;net462;net47;net471;netcoreapp2.0</TargetFrameworks>
    </PropertyGroup>
    <!-- Properties for NuGet package -->
    <PropertyGroup>
        <IsPackable>false</IsPackable>
    </PropertyGroup>
    <!-- NuGet packages -->
    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.3.0"/>
        <PackageReference Include="xunit" Version="2.2.0"/>
        <PackageReference Include="xunit.runner.visualstudio" Version="2.2.0"/>
        <PackageReference Include="AutoFixture" Version="3.51.0"/>
        <PackageReference Include="AutoFixture.AutoMoq" Version="3.51.0"/>
        <PackageReference Include="FluentAssertions" Version="4.19.4"/>
        <PackageReference Include="Moq" Version="4.7.145"/>
    </ItemGroup>
    <!-- NuGet packages for .NET Framework -->
    <ItemGroup Condition="$(TargetFramework) == 'net46'">
        <PackageReference Include="Rocks.Dataflow" Version="1.4.0.1"/>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net461'">
        <PackageReference Include="Rocks.Dataflow" Version="1.4.0.1"/>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net462'">
        <PackageReference Include="Rocks.Dataflow" Version="1.4.0.1"/>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net47'">
        <PackageReference Include="Rocks.Dataflow" Version="1.4.0.1"/>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net471'">
        <PackageReference Include="Rocks.Dataflow" Version="1.4.0.1"/>
    </ItemGroup>
    <!-- NuGet packages for .NET Core -->
    <ItemGroup Condition="$(TargetFramework) == 'netcoreapp2.0'">
        <PackageReference Include="Rocks.Dataflow" Version="2.1.0"/>
    </ItemGroup>
    <!-- References for .NET Framework -->
    <ItemGroup Condition="$(TargetFramework) == 'net46'">
        <Reference Include="System.Web"/>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net462'">
        <Reference Include="System.Web"/>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net461'">
        <Reference Include="System.Web"/>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net47'">
        <Reference Include="System.Web"/>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net471'">
        <Reference Include="System.Web"/>
    </ItemGroup>
    <!-- Projects -->
    <ItemGroup>
        <ProjectReference Include="..\Rocks.Profiling\Rocks.Profiling.csproj"/>
    </ItemGroup>
</Project>